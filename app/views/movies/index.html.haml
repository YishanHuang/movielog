%p#notice= notice
%h1 Movie List
%table
  %thead
    %tr
      %th Name
      %th Date
      %th{:colspan => "3"}
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.name
        %td= movie.date
        %td= link_to 'Detail', movie
        %td= link_to 'Edit', edit_movie_path(movie)
        %td= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Movie', new_movie_path
= link_to 'Main', controller: 'welcome'
