= form_for(@movie) do |f|
  - if @movie.errors.any?
    #error_explanation
      %h2
        = pluralize(@movie.errors.count, "error")
        prohibited this movie from being saved:
      %ul
        - @movie.errors.full_messages.each do |message|
          %li= message
    %br/
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :date
    %br/
    = f.date_select :date
  .actions
    = f.submit
